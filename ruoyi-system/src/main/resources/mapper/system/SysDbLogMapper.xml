<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysDbLogMapper">
    
    <resultMap type="SysDbLog" id="SysDbLogResult">
        <result property="logId"    column="log_id"    />
        <result property="connId"    column="conn_id"    />
        <result property="operationType"    column="operation_type"    />
        <result property="sqlContent"    column="sql_content"    />
        <result property="affectedRows"    column="affected_rows"    />
        <result property="costTime"    column="cost_time"    />
        <result property="status"    column="status"    />
        <result property="errorMsg"    column="error_msg"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectSysDbLogVo">
        select log_id, conn_id, operation_type, sql_content, affected_rows, cost_time, status, error_msg, create_by, create_time from sys_db_log
    </sql>

    <select id="selectSysDbLogList" parameterType="SysDbLog" resultMap="SysDbLogResult">
        <include refid="selectSysDbLogVo"/>
        <where>  
            <if test="connId != null "> and conn_id = #{connId}</if>
            <if test="operationType != null and operationType != ''"> and operation_type = #{operationType}</if>
            <if test="sqlContent != null  and sqlContent != ''"> and sql_content like concat('%', #{sqlContent}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createBy != null and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
            <if test="params.beginTime != null and params.beginTime != ''"> and create_time &gt;= #{params.beginTime}</if>
            <if test="params.endTime != null and params.endTime != ''"> and create_time &lt;= #{params.endTime}</if>
            <if test="params.keyword != null and params.keyword != ''"> and (sql_content like concat('%', #{params.keyword}, '%') or error_msg like concat('%', #{params.keyword}, '%'))</if>
        </where>
    </select>
    
    <select id="selectSysDbLogByLogId" parameterType="Long" resultMap="SysDbLogResult">
        <include refid="selectSysDbLogVo"/>
        where log_id = #{logId}
    </select>
        
    <insert id="insertSysDbLog" parameterType="SysDbLog" useGeneratedKeys="true" keyProperty="logId">
        insert into sys_db_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="connId != null">conn_id,</if>
            <if test="operationType != null">operation_type,</if>
            <if test="sqlContent != null and sqlContent != ''">sql_content,</if>
            <if test="affectedRows != null">affected_rows,</if>
            <if test="costTime != null">cost_time,</if>
            <if test="status != null">status,</if>
            <if test="errorMsg != null">error_msg,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="connId != null">#{connId},</if>
            <if test="operationType != null">#{operationType},</if>
            <if test="sqlContent != null and sqlContent != ''">#{sqlContent},</if>
            <if test="affectedRows != null">#{affectedRows},</if>
            <if test="costTime != null">#{costTime},</if>
            <if test="status != null">#{status},</if>
            <if test="errorMsg != null">#{errorMsg},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateSysDbLog" parameterType="SysDbLog">
        update sys_db_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="connId != null">conn_id = #{connId},</if>
            <if test="operationType != null and operationType != ''">operation_type = #{operationType},</if>
            <if test="sqlContent != null and sqlContent != ''">sql_content = #{sqlContent},</if>
            <if test="affectedRows != null">affected_rows = #{affectedRows},</if>
            <if test="costTime != null">cost_time = #{costTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="errorMsg != null">error_msg = #{errorMsg},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where log_id = #{logId}
    </update>

    <delete id="deleteSysDbLogByLogId" parameterType="Long">
        delete from sys_db_log where log_id = #{logId}
    </delete>

    <delete id="deleteSysDbLogByLogIds" parameterType="String">
        delete from sys_db_log where log_id in 
        <foreach item="logId" collection="array" open="(" separator="," close=")">
            #{logId}
        </foreach>
    </delete>
</mapper>
