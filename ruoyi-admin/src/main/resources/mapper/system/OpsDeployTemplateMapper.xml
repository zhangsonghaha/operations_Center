<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.OpsDeployTemplateMapper">
    
    <resultMap type="OpsDeployTemplate" id="OpsDeployTemplateResult">
        <result property="id"    column="id"    />
        <result property="templateName"    column="template_name"    />
        <result property="appType"    column="app_type"    />
        <result property="scriptContent"    column="script_content"    />
        <result property="parameterConfig"    column="parameter_config"    />
        <result property="version"    column="version"    />
        <result property="builtIn"    column="built_in"    />
        <result property="status"    column="status"    />
        <result property="sha256"    column="sha256"    />
        <result property="guideContent"    column="guide_content"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="creator"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectOpsDeployTemplateVo">
        select id, template_name, app_type, script_content, parameter_config, version, built_in, status, sha256, guide_content, remark, creator, create_time, update_by, update_time from ops_deploy_template
    </sql>

    <select id="selectOpsDeployTemplateList" parameterType="OpsDeployTemplate" resultMap="OpsDeployTemplateResult">
        <include refid="selectOpsDeployTemplateVo"/>
        <where>  
            <if test="templateName != null  and templateName != ''"> and template_name like concat('%', #{templateName}, '%')</if>
            <if test="appType != null  and appType != ''"> and app_type = #{appType}</if>
            <if test="version != null  and version != ''"> and version = #{version}</if>
            <if test="builtIn != null  and builtIn != ''"> and built_in = #{builtIn}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectOpsDeployTemplateById" parameterType="Long" resultMap="OpsDeployTemplateResult">
        <include refid="selectOpsDeployTemplateVo"/>
        where id = #{id}
    </select>

    <select id="selectOpsDeployTemplateByAppTypeAndBuiltIn" resultMap="OpsDeployTemplateResult">
        <include refid="selectOpsDeployTemplateVo"/>
        where app_type = #{appType} and built_in = #{builtIn} limit 1
    </select>
        
    <insert id="insertOpsDeployTemplate" parameterType="OpsDeployTemplate" useGeneratedKeys="true" keyProperty="id">
        insert into ops_deploy_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name,</if>
            <if test="appType != null and appType != ''">app_type,</if>
            <if test="scriptContent != null and scriptContent != ''">script_content,</if>
            <if test="parameterConfig != null and parameterConfig != ''">parameter_config,</if>
            <if test="version != null and version != ''">version,</if>
            <if test="builtIn != null">built_in,</if>
            <if test="status != null">status,</if>
            <if test="sha256 != null">sha256,</if>
            <if test="guideContent != null">guide_content,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">creator,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">#{templateName},</if>
            <if test="appType != null and appType != ''">#{appType},</if>
            <if test="scriptContent != null and scriptContent != ''">#{scriptContent},</if>
            <if test="parameterConfig != null and parameterConfig != ''">#{parameterConfig},</if>
            <if test="version != null and version != ''">#{version},</if>
            <if test="builtIn != null">#{builtIn},</if>
            <if test="status != null">#{status},</if>
            <if test="sha256 != null">#{sha256},</if>
            <if test="guideContent != null">#{guideContent},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateOpsDeployTemplate" parameterType="OpsDeployTemplate">
        update ops_deploy_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name = #{templateName},</if>
            <if test="appType != null and appType != ''">app_type = #{appType},</if>
            <if test="scriptContent != null and scriptContent != ''">script_content = #{scriptContent},</if>
            <if test="parameterConfig != null and parameterConfig != ''">parameter_config = #{parameterConfig},</if>
            <if test="version != null and version != ''">version = #{version},</if>
            <if test="builtIn != null">built_in = #{builtIn},</if>
            <if test="status != null">status = #{status},</if>
            <if test="sha256 != null">sha256 = #{sha256},</if>
            <if test="guideContent != null">guide_content = #{guideContent},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">creator = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOpsDeployTemplateById" parameterType="Long">
        delete from ops_deploy_template where id = #{id}
    </delete>

    <delete id="deleteOpsDeployTemplateByIds" parameterType="Long">
        delete from ops_deploy_template where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
