<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.SysBatchTaskMapper">
    
    <resultMap type="SysBatchTask" id="SysBatchTaskResult">
        <result property="taskId"    column="task_id"    />
        <result property="taskName"    column="task_name"    />
        <result property="taskType"    column="task_type"    />
        <result property="commandContent"    column="command_content"    />
        <result property="sourceFile"    column="source_file"    />
        <result property="destPath"    column="dest_path"    />
        <result property="status"    column="status"    />
        <result property="totalHost"    column="total_host"    />
        <result property="successHost"    column="success_host"    />
        <result property="failHost"    column="fail_host"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
    </resultMap>

    <sql id="selectSysBatchTaskVo">
        select task_id, task_name, task_type, command_content, source_file, dest_path, status, total_host, success_host, fail_host, create_by, create_time, start_time, end_time from sys_batch_task
    </sql>

    <select id="selectSysBatchTaskList" parameterType="SysBatchTask" resultMap="SysBatchTaskResult">
        <include refid="selectSysBatchTaskVo"/>
        <where>  
            <if test="taskName != null  and taskName != ''"> and task_name like concat('%', #{taskName}, '%')</if>
            <if test="taskType != null  and taskType != ''"> and task_type = #{taskType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectSysBatchTaskById" parameterType="Long" resultMap="SysBatchTaskResult">
        <include refid="selectSysBatchTaskVo"/>
        where task_id = #{taskId}
    </select>
        
    <insert id="insertSysBatchTask" parameterType="SysBatchTask" useGeneratedKeys="true" keyProperty="taskId">
        insert into sys_batch_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskName != null and taskName != ''">task_name,</if>
            <if test="taskType != null and taskType != ''">task_type,</if>
            <if test="commandContent != null">command_content,</if>
            <if test="sourceFile != null">source_file,</if>
            <if test="destPath != null">dest_path,</if>
            <if test="status != null">status,</if>
            <if test="totalHost != null">total_host,</if>
            <if test="successHost != null">success_host,</if>
            <if test="failHost != null">fail_host,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskName != null and taskName != ''">#{taskName},</if>
            <if test="taskType != null and taskType != ''">#{taskType},</if>
            <if test="commandContent != null">#{commandContent},</if>
            <if test="sourceFile != null">#{sourceFile},</if>
            <if test="destPath != null">#{destPath},</if>
            <if test="status != null">#{status},</if>
            <if test="totalHost != null">#{totalHost},</if>
            <if test="successHost != null">#{successHost},</if>
            <if test="failHost != null">#{failHost},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
         </trim>
    </insert>

    <update id="updateSysBatchTask" parameterType="SysBatchTask">
        update sys_batch_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskName != null and taskName != ''">task_name = #{taskName},</if>
            <if test="taskType != null and taskType != ''">task_type = #{taskType},</if>
            <if test="commandContent != null">command_content = #{commandContent},</if>
            <if test="sourceFile != null">source_file = #{sourceFile},</if>
            <if test="destPath != null">dest_path = #{destPath},</if>
            <if test="status != null">status = #{status},</if>
            <if test="totalHost != null">total_host = #{totalHost},</if>
            <if test="successHost != null">success_host = #{successHost},</if>
            <if test="failHost != null">fail_host = #{failHost},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
        </trim>
        where task_id = #{taskId}
    </update>

    <delete id="deleteSysBatchTaskById" parameterType="Long">
        delete from sys_batch_task where task_id = #{taskId}
    </delete>

    <delete id="deleteSysBatchTaskByIds" parameterType="String">
        delete from sys_batch_task where task_id in 
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </delete>
</mapper>
