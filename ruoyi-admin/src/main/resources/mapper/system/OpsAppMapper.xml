<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.OpsAppMapper">
    
    <resultMap type="OpsApp" id="OpsAppResult">
        <result property="appId"    column="app_id"    />
        <result property="appName"    column="app_name"    />
        <result property="packagePath"    column="package_path"    />
        <result property="appType"    column="app_type"    />
        <result property="deployPath"    column="deploy_path"    />
        <result property="startScript"    column="start_script"    />
        <result property="monitorPorts"    column="monitor_ports"    />
        <result property="owner"    column="owner"    />
        <result property="techStack"    column="tech_stack"    />
        <result property="deptId"    column="dept_id"    />
        <result property="stopScript"    column="stop_script"    />
        <result property="description"    column="description"    />
        <result property="serverIds"    column="server_ids"    />
        <result property="status"    column="status"    />
        <result property="healthCheckUrl"    column="health_check_url"    />
        <result property="deployTimeout"    column="deploy_timeout"    />
        <result property="retryCount"    column="retry_count"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectOpsAppVo">
        select app_id, app_name, app_type, package_path, deploy_path, start_script, monitor_ports, owner, tech_stack, dept_id, stop_script, description, server_ids, status, health_check_url, deploy_timeout, retry_count, create_by, create_time, update_by, update_time, remark from t_ops_app
    </sql>

    <select id="selectOpsAppList" parameterType="OpsApp" resultMap="OpsAppResult">
        <include refid="selectOpsAppVo"/>
        <where>  
            <if test="appName != null  and appName != ''"> and app_name like concat('%', #{appName}, '%')</if>
            <if test="appType != null  and appType != ''"> and app_type = #{appType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectOpsAppById" parameterType="Long" resultMap="OpsAppResult">
        <include refid="selectOpsAppVo"/>
        where app_id = #{appId}
    </select>
        
    <insert id="insertOpsApp" parameterType="OpsApp" useGeneratedKeys="true" keyProperty="appId">
        insert into t_ops_app
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="appName != null">app_name,</if>
            <if test="packagePath != null">package_path,</if>
            <if test="appType != null">app_type,</if>
            <if test="deployPath != null">deploy_path,</if>
            <if test="startScript != null">start_script,</if>
            <if test="monitorPorts != null">monitor_ports,</if>
            <if test="owner != null">owner,</if>
            <if test="techStack != null">tech_stack,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="stopScript != null">stop_script,</if>
            <if test="description != null">description,</if>
            <if test="serverIds != null">server_ids,</if>
            <if test="status != null">status,</if>
            <if test="healthCheckUrl != null">health_check_url,</if>
            <if test="deployTimeout != null">deploy_timeout,</if>
            <if test="retryCount != null">retry_count,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="appName != null">#{appName},</if>
            <if test="packagePath != null">#{packagePath},</if>
            <if test="appType != null">#{appType},</if>
            <if test="deployPath != null">#{deployPath},</if>
            <if test="startScript != null">#{startScript},</if>
            <if test="monitorPorts != null">#{monitorPorts},</if>
            <if test="owner != null">#{owner},</if>
            <if test="techStack != null">#{techStack},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="stopScript != null">#{stopScript},</if>
            <if test="description != null">#{description},</if>
            <if test="serverIds != null">#{serverIds},</if>
            <if test="status != null">#{status},</if>
            <if test="healthCheckUrl != null">#{healthCheckUrl},</if>
            <if test="deployTimeout != null">#{deployTimeout},</if>
            <if test="retryCount != null">#{retryCount},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateOpsApp" parameterType="OpsApp">
        update t_ops_app
        <trim prefix="SET" suffixOverrides=",">
            <if test="appName != null">app_name = #{appName},</if>
            <if test="packagePath != null">package_path = #{packagePath},</if>
            <if test="appType != null">app_type = #{appType},</if>
            <if test="deployPath != null">deploy_path = #{deployPath},</if>
            <if test="startScript != null">start_script = #{startScript},</if>
            <if test="monitorPorts != null">monitor_ports = #{monitorPorts},</if>
            <if test="owner != null">owner = #{owner},</if>
            <if test="techStack != null">tech_stack = #{techStack},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="stopScript != null">stop_script = #{stopScript},</if>
            <if test="description != null">description = #{description},</if>
            <if test="serverIds != null">server_ids = #{serverIds},</if>
            <if test="status != null">status = #{status},</if>
            <if test="healthCheckUrl != null">health_check_url = #{healthCheckUrl},</if>
            <if test="deployTimeout != null">deploy_timeout = #{deployTimeout},</if>
            <if test="retryCount != null">retry_count = #{retryCount},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where app_id = #{appId}
    </update>

    <delete id="deleteOpsAppById" parameterType="Long">
        delete from t_ops_app where app_id = #{appId}
    </delete>

    <delete id="deleteOpsAppByIds" parameterType="String">
        delete from t_ops_app where app_id in 
        <foreach item="appId" collection="array" open="(" separator="," close=")">
            #{appId}
        </foreach>
    </delete>

    <select id="checkAppNameUnique" parameterType="String" resultMap="OpsAppResult">
        <include refid="selectOpsAppVo"/>
        where app_name = #{appName} limit 1
    </select>
</mapper>
