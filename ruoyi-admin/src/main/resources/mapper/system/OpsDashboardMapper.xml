<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.OpsDashboardMapper">
    
    <resultMap type="OpsHost" id="OpsHostResult">
        <result property="hostId"    column="host_id"    />
        <result property="hostName"    column="host_name"    />
        <result property="ipAddress"    column="ip_address"    />
        <result property="status"    column="status"    />
        <result property="cpuUsage"    column="cpu_usage"    />
        <result property="memoryUsage"    column="memory_usage"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <resultMap type="OpsDeployment" id="OpsDeploymentResult">
        <result property="deploymentId"    column="deployment_id"    />
        <result property="appName"    column="app_name"    />
        <result property="version"    column="version"    />
        <result property="deployStatus"    column="deploy_status"    />
        <result property="deployTime"    column="deploy_time"    />
        <result property="operator"    column="operator"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <resultMap type="OpsAlert" id="OpsAlertResult">
        <result property="alertId"    column="alert_id"    />
        <result property="alertContent"    column="alert_content"    />
        <result property="alertType"    column="alert_type"    />
        <result property="status"    column="status"    />
        <result property="alertTime"    column="alert_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <resultMap type="OpsMonitorLog" id="OpsMonitorLogResult">
        <result property="logId"    column="id"    />
        <result property="serverId"    column="server_id"    />
        <result property="cpuUsage"    column="cpu_usage"    />
        <result property="memoryUsage"    column="memory_usage"    />
        <result property="diskUsage"    column="disk_usage"    />
        <result property="netTxRate"    column="net_tx_rate"    />
        <result property="netRxRate"    column="net_rx_rate"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <select id="selectOpsHostList" parameterType="OpsHost" resultMap="OpsHostResult">
        select host_id, host_name, ip_address, status, cpu_usage, memory_usage, create_by, create_time, update_by, update_time from t_ops_host
        <where>  
            <if test="hostName != null  and hostName != ''"> and host_name like concat('%', #{hostName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectOpsDeploymentList" parameterType="OpsDeployment" resultMap="OpsDeploymentResult">
        select deployment_id, app_name, version, deploy_status, deploy_time, operator, create_by, create_time, update_by, update_time from t_ops_deployment
        <where>  
            <if test="appName != null  and appName != ''"> and app_name like concat('%', #{appName}, '%')</if>
            <if test="deployStatus != null  and deployStatus != ''"> and deploy_status = #{deployStatus}</if>
        </where>
        order by deploy_time desc
    </select>
    
    <select id="selectOpsAlertList" parameterType="OpsAlert" resultMap="OpsAlertResult">
        select alert_id, alert_content, alert_type, status, alert_time, create_by, create_time, update_by, update_time from t_ops_alert
        <where>  
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="alertType != null  and alertType != ''"> and alert_type = #{alertType}</if>
        </where>
        order by alert_time desc
    </select>
    
    <select id="selectOpsMonitorLogList" parameterType="OpsMonitorLog" resultMap="OpsMonitorLogResult">
        select id, server_id, cpu_usage, memory_usage, disk_usage, net_tx_rate, net_rx_rate, create_time from sys_ops_monitor_log
        order by create_time asc
    </select>

    <select id="countOnlineHosts" resultType="int">
        select count(1) from t_ops_host where status = '0'
    </select>

    <select id="countPendingAlerts" resultType="int">
        select count(1) from t_ops_alert where status = '0'
    </select>

    <select id="countTodayDeployments" resultType="int">
        select count(1) from t_ops_deployment where date(deploy_time) = curdate()
    </select>
    
</mapper>
